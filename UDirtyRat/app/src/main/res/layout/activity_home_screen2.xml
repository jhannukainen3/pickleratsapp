<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.pickleratsapp.cs2340.udirtyrat.HomeScreen">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_home_screen"
        android:layout_weight="1" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U Dirty Rat"
            android:textSize="32sp"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|center"
            android:layout_marginTop="160dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            app:srcCompat="@drawable/picklerat" />

        <Button
            android:id="@+id/registerConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register"
            app:layout_anchorGravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/logo"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginEnd="-20dp" />
        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:text="Login"
            app:layout_anchorGravity="center_vertical|center_horizontal"
            android:layout_alignBaseline="@+id/registerConfirm"
            android:layout_alignBottom="@+id/registerConfirm"
            android:layout_alignStart="@+id/textView"
            android:layout_marginStart="-20dp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
